<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 15 (API 35) edge-to-edge support - Dark mode -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <!-- Edge-to-edge: 투명한 시스템 바 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
    </style>
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- Edge-to-edge: 투명한 시스템 바 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">false</item>
    </style>
</resources>
